{
  "manifest_version": 3,
  "name": "clipboard",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/clipboard-icon.png",
      "48": "icons/clipboard-icon.png"
    }
  },
  "icons": {
    "16": "icons/clipboard-icon.png",
    "48": "icons/clipboard-icon.png",
    "128": "icons/clipboard-icon.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "backgroundScript.js"
  }
}